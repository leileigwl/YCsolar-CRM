{
  "name": "ycsolar-crm",
  "version": "1.0.0",
  "description": "YCSolar CRM System",
  "scripts": {
    "start:frontend": "cd myclient && npm start",
    "start:backend": "cd server && npm run dev",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:prod": "cd server && npm start",
    "build": "cd myclient && npm run build",
    "deploy": "bash scripts/deploy.sh",
    "update-version": "bash scripts/update-version.sh",
    "docker:build": "bash scripts/docker-build.sh",
    "docker:push": "bash scripts/docker-push.sh"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
} 